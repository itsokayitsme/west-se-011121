<h1>Edit this pet!</h1>

<%= form_for @pet do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :species %>
    <%= f.text_field :species %>
    <%= f.label :year_of_birth %>
    <%= f.number_field :year_of_birth %>
    <br>
    <%= f.label :good_with_kids_true, "Is good with kids!" %>
    <%= f.radio_button :good_with_kids, "true" %>
    <%= f.label :good_with_kids_false, "Is monstrous with kids!" %>
    <%= f.radio_button :good_with_kids, "false" %>
    <%= f.submit %>
<% end %>